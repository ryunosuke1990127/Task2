<h1>Editing Book</h1>
<!--エラー時の切り分け-->
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
  </ul>
<% end %>

<!--編集フォームの作成-->
<%= form_with model: @book, method: :patch do |f|%>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Body</h4>
<%= f.text_area :body %>
<%= f.submit 'Update Book'%>

<span class="link_show_back">
  <%= link_to "Show", book_path(@book.id)%> | <%= link_to "Back" ,books_path %>
</span>

<% end %>
